<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/id_pager3_makemoney_listitem3_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/id_pager3_makemoney_listitem3_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_primary_text_material_light"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/id_pager3_makemoney_listitem3_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/button_material_dark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/id_pager3_makemoney_listitem3_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/button_material_dark"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/id_pager3_makemoney_listitem3_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/button_material_dark"
                android:textSize="11sp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_alignParentLeft="true"
                    android:id="@+id/id_pager3_makemoney_listitem3_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_pager3_makemoney_listitem1_6"
                    android:gravity="center"
                    android:textColor="@color/background_floating_material_light" />


                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/id_pager3_makemoney_listitem3_text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/test_pager3_makemoney_listitem1_5"
                    android:gravity="center"
                    android:textColor="@color/background_floating_material_light" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>