<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_fragmentGrow"
    android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/link_text_material_dark"
        android:orientation="horizontal">

        <ImageView
            android:onClick="slidingmenuGrowOnClick"
            android:src="@drawable/slidinging_leave_top_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:text="@string/fragment_grow_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/background_material_light"
            android:textSize="20sp" />

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_top_1_1"
            android:onClick="slidingMenu" />
    </LinearLayout>
    <ListView
        android:layout_margin="20dp"
        android:id="@+id/id_slidingMenu_grow_Lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>